md-toolbar.md-whiteframe-3dp(md-scroll-shrink, layout="row", layout-align="center center")
  div.md-toolbar-tools
    menu-button(hide-gt-sm)
    h1 Profil
md-content.content(flex, layout-padding, layout="row")
  div(flex="33")
    md-card(flex)
      md-card-header
        md-card-header-text
          span.md-title Dein Steckbrief
      md-card-content.quote
        md-input-container.md-block
          label Spitzname
          input(type="text", ng-model="profile.user.title")
        md-input-container.md-block
          label Geburtsdatum
          input(type="text", ng-model="profile.user.birth")
        md-input-container.md-block
          label Abi-Fächer
          input(type="text", ng-model="profile.user.subjects")
        md-input-container.md-block
          label Blödestes Fach
          input(type="text", ng-model="profile.user.worst")
        md-input-container.md-block
          label Lebensmotto
          input(type="text", ng-model="profile.user.motto")
        md-input-container.md-block
          label Nach dem Abi
          input(type="text", ng-model="profile.user.after")
      md-card-actions(layout="row", layout-align="end center")
        md-button(ng-click="profile.save()") Speichern
